        },
        "required": [
          "person_id",
          "patient_id",
          "first_name",
          "surname",
          "year_of_birth",
          "gender",
          "ethnicity",
          "ehr_id",
          "email"
        ]
      },
      "PatientListResponse": {
        "type": "object",
        "properties": {
          "total_count": {
