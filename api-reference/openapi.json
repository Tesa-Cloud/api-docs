          "ehr_id": {
            "type": "string"
          },
          "ethnicity": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "mobile_phone": {
            "type": "string"
          },
          "preferred_contact_method": {
            "type": "string"
          },
          "preferred_language": {
            "type": "string"
          }
        },
        "required": [
          "first_name_initial",
          "last_name",
          "year_of_birth",
          "gender",
          "ehr_id",
          "ethnicity",
          "email",
          "mobile_phone",
          "preferred_contact_method",
          "preferred_language"
