        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "FetchAppointmentsRequest": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date-time",
            "description": "Start date for the date range filter (ISO 8601 format)"
          },
          "end_date": {
            "type": "string",
            "format": "date-time",
            "description": "End date for the date range filter (ISO 8601 format)"
          },
          "page": {
            "type": "integer",
            "default": 1,
            "description": "Page number for pagination"
          },
          "page_size": {
            "type": "integer",
            "default": 25,
            "description": "Number of results per page"
          }
        },
        "required": [
          "start_date",
          "end_date"
        ]
      },
      "Appointment": {
        "type": "object",
        "properties": {
          "appointment_id": {
            "type": "integer",
            "description": "Unique appointment identifier"
          },
          "datetime": {
            "type": "string",
            "format": "date-time",
            "description": "Scheduled appointment date and time"
