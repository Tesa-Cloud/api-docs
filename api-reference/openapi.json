            "type": "integer",
            "description": "Patient identifier"
          },
          "location_id": {
            "type": "integer",
            "description": "Location identifier"
          },
          "organisation_id": {
            "type": "integer",
            "description": "Organisation identifier (optional, defaults to API key's organisation)"
          },
          "provider_id": {
            "type": "integer",
            "description": "Provider/surgeon identifier (optional)"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes for the appointment"
          },
          "procedure_template_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "List of procedure template IDs"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date-time",
            "description": "Scheduled date and time (ISO 8601 format)"
          }
        },
        "required": [
          "patient_id",
          "location_id",
