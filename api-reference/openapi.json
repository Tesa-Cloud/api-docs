{
  "openapi": "3.1.0",
  "info": {
    "title": "Tesa Cloud API",
    "description": "API access to the Tesa Cloud Digital Platform including patient information, surgery details, and patient-reported outcome survey data.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.tesacloud.com"
    }
  ],
  "security": [
    {
      "ApiKeyHeader": [],
      "ApiSecretHeader": []
    }
  ],
  "paths": {
    "/createPatientProfile": {
      "post": {
        "description": "Creates a new patient profile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPatientProfile"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Patient profile created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "Unique ID of the created patient"
                    }
                  },
                  "required": ["id"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/fetchMyPatients": {
      "post": {
        "description": "Fetches a paginated list of patients associated with the authenticated organization's API key.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of patients to return.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Number of patients to skip from the beginning of the result set.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated list of patients",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PatientListResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or unauthorized access",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewPatientProfile": {
        "type": "object",
        "properties": {
          "first_name_initial": {
            "type": "string",
            "maxLength": 1
          },
          "last_name": {
            "type": "string"
          },
          "year_of_birth": {
            "type": "integer",
            "pattern": "^(19|20)\\d{2}$"
          },
          "gender": {
            "type": "string",
            "enum": ["Male", "Female", "Other"]
          },
          "ehr_id": {
            "type": "string"
          },
          "ethnicity": {
            "type": "string",
            "enum": [
              "African", "Asian", "East Asian", "European", "Hispanic/Latino",
              "Middle Eastern", "Native/Indigenous", "Pacific Islander",
              "South Asian", "Mixed/Other"
            ]
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "mobile_phone": {
            "type": "string"
          },
          "preferred_contact_method": {
            "type": "string",
            "enum": ["email", "sms"]
          },
          "preferred_language": {
            "type": "string",
            "enum": ["en", "es", "fr", "pt", "ar", "zh", "hi"]
          }
        },
        "required": [
          "first_name_initial",
          "last_name",
          "year_of_birth",
          "gender",
          "ehr_id",
          "ethnicity",
          "email",
          "mobile_phone",
          "preferred_contact_method",
          "preferred_language"
        ]
      },
      "Patient": {
        "type": "object",
        "properties": {
          "person_id": { "type": "integer" },
          "patient_id": { "type": "integer" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "year_of_birth": { "type": "integer" },
          "gender": {
            "type": "string",
            "enum": ["Male", "Female", "Other"]
          },
          "ethnicity": { "type": "string" },
          "EHR_patient_id": { "type": "string" },
          "appointment_time": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "The date/time of the patient's most recent appointment."
          },
          "procedure_title": {
            "type": ["string", "null"],
            "description": "The surgical procedure performed at the most recent appointment."
          },
          "email": {
            "type": ["string", "null"],
            "format": "email"
          },
          "sms_number": {
            "type": ["string", "null"]
          },
          "organisation_id": { "type": "integer" },
          "preferred_language": {
            "type": ["string", "null"],
            "enum": ["en", "es", "fr", "pt", "ar", "zh", "hi"]
          },
          "row_id": {
            "type": "integer",
            "description": "Server-generated row ID for pagination purposes."
          }
        },
        "required": [
          "person_id",
          "patient_id",
          "first_name",
          "last_name",
          "year_of_birth",
          "gender",
          "ethnicity",
          "EHR_patient_id",
          "organisation_id"
        ]
      },
      "PatientListResponse": {
        "type": "object",
        "properties": {
          "total_count": {
            "type": "integer",
            "description": "Total number of patients available for pagination."
          },
          "patients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Patient"
            }
          }
        },
        "required": ["total_count", "patients"]
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key",
        "description": "Your Tesa Cloud API Key (organization-scoped)."
      },
      "ApiSecretHeader": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-secret",
        "description": "Your secret API token. Keep this secure and never expose it in client apps."
      }
    }
  }
}