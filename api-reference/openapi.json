          "procedure_template_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "List of procedure template IDs"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date-time",
            "description": "Scheduled date and time"
          },
          "notes": {
            "type": "string",
            "description": "Appointment notes"
          },
          "status": {
            "type": "string",
