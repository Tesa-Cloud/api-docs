          "street_name": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "postcode": {
            "type": "string"
          },
          "country": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "description",
          "building_name",
          "room_identifier",
          "street_number",
          "street_name",
          "city",
          "state",
          "postcode",
          "country"
