          },
          "patient_surname": {
            "type": "string",
            "description": "Patient's surname"
          },
          "patient_ehr_id": {
            "type": "string",
            "description": "Patient's EHR ID"
          },
          "patient_id": {
            "type": "integer",
            "description": "Patient identifier"
          }
        }
      },
