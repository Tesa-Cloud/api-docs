          "person_id": {
            "type": "integer"
          },
          "ehr_id": {
            "type": "string"
          },
          "first_name_initial": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "year_of_birth": {
            "type": "integer"
          },
          "gender": {
            "type": "string"
          },
          "ethnicity": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "mobile_phone": {
            "type": "string"
          },
          "preferred_language": {
            "type": "string"
          }
        },
        "required": [
          "patient_id",
          "person_id",
          "ehr_id",
          "first_name_initial",
          "last_name",
